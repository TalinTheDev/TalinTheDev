---
import "@styles/reset.css";
import "@styles/global.css";
import Logo from "@components/Logo.astro";
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Iceland&family=Tiny5&family=Tomorrow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
			rel="stylesheet"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="light">
		<div id="header">
			<Logo />
		</div>
		<slot />
	</body>
<script is:inline>
	var mode = "light";
	const toggle = () => {
		if(mode=="light"){mode = "dark";}
		else {mode = "light";}
		document.getElementsByTagName("body")[0].id = mode;clear()}</script>
</html>


<style>
	body {
		margin: 0px 15%;
		padding: 25px 0px;
		background-color: var(--bg-color);
		color: var(--body-text-color);
	}
</style>
