---
import "@styles/reset.css";
import "@styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Mozilla+Headline:wght@200..700&display=swap"
			rel="stylesheet"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="light">
		<div id="sidebar">
			<a href="/">
				<div id="me">
					<h1>Talin Sharma</h1>
					<h2>Programmer. Builder. Learner.</h2>
				</div></a
			>
			<nav>
				<a href="/" id="homeLink" class="current">About</a>
				<a href="/blog" id="blogLink">Blog</a>
				<a href="/projects" id="projectLink">Projects</a>
				<a href="/contact" id="contactLink">Contact</a>
			</nav>
		</div>
		<div id="content">
			<slot />
		</div>
	</body>
	<script is:inline>
		const page = window.location.pathname.split("/")[1];
		switch (page) {
			case "":
				document
					.getElementsByClassName("current")[0]
					.classList.remove("current");
				document.getElementById("homeLink").classList.add("current");
				break;
			case "blog":
				document
					.getElementsByClassName("current")[0]
					.classList.remove("current");
				document.getElementById("blogLink").classList.add("current");
				break;
			case "projects":
				document
					.getElementsByClassName("current")[0]
					.classList.remove("current");
				document.getElementById("projectLink").classList.add("current");
				break;
			case "contact":
				document
					.getElementsByClassName("current")[0]
					.classList.remove("current");
				document.getElementById("contactLink").classList.add("current");
				break;
		}
		var mode = "light";
		const toggle = () => {
			if (mode == "light") {
				mode = "dark";
			} else {
				mode = "light";
			}
			document.getElementsByTagName("body")[0].id = mode;
			clear();
		};
	</script>
</html>

<style>
	body {
		background-color: var(--bg-color);
		color: var(--body-text-color);

		display: grid;
		grid-template-areas: "sidebar content";
		grid-template-columns: 1fr 1fr;
		grid-template-rows: 1fr;

		height: 100%;
		width: 95%;
		margin: auto;
	}

	@media (min-width: 2000px) {
		body {
			width: 60%;
		}
	}

	#sidebar {
		grid-area: sidebar;
		padding: 5em 0 0 15em;
		flex-direction: column;
		display: flex;

		a {
			text-decoration: none;
		}
		#me {
			h1 {
				font-size: 3.5em;
			}

			h2 {
				margin-top: -0.5em;
				font-size: 1.25em;
				width: max-content;
				background: linear-gradient(var(--primary) 0 0) bottom left/100%
					8px no-repeat;
				display: inline-block;
				transition: background-size 0.5s;
				padding-bottom: 0.5em;
			}
			font-family: "Mozilla Headline", sans-serif;
		}

		nav {
			margin-top: 1.5em;
			display: flex;
			flex-direction: column;
			row-gap: 0.25em;

			a {
				text-decoration: none;
				width: min-content;
				padding: 0.5em 0em;
				transition: border 100ms linear;
				border-bottom: 0px solid var(--link-color);
			}

			a.current,
			a:hover {
				transition: border 100ms linear;
				text-shadow: 4px 4px 5px var(--primary);
				font-weight: bold;
			}
		}
	}
	#content {
		grid-area: content;

		padding: 5em 15em 0 0;
	}
</style>
